{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "backend:run": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "pm2:start":{
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalDependencies": [],
  "globalEnv": [
    "NEXT_PUBLIC_GITHUB_REPO",
    "NEXT_PUBLIC_GITHUB_USER",
    "NEXT_PUBLIC_TITLE",
    "NODE_ENV",
    "DATABASE_URL",
    "DB_CONN_STRING",
    "NEXT_PUBLIC_SPOTIFY_USERNAME",
    "CLIENT_ID",
    "CLIENT_SECRET",
    "COLLECTION_NAME",
    "SPOTIFY_USER"
  ]
}
