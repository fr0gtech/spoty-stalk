// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["filteredRelationCount"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scan{
  id          Int    @id @default(autoincrement())
  updated   Playlist[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Playlist {
  id          Int    @id @default(autoincrement())
  sid         String @unique
  name        String
  images      Json
  externalUrl String
  description String
  tracks      Int
  updated     Scan[]
  songs          Song[]
  lastSnapShotId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Artist {
  id          Int    @id @default(autoincrement())
  sid         String? 
  name        String @unique
  externalUrl String?
  songs       Song[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Song {
  id          Int      @id @default(autoincrement())
  sid         String   @unique
  addedAt     DateTime
  name        String
  externalUrl String?
  images      Json

  previewUrl String?
  durationMs Int
  playlists  Playlist[]
  artists    Artist[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
